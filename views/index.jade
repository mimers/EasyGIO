extends layout

block content
  script(src="/javascripts/vue.min.js")
  div(id="container")
    img(class="growing-logo", src="https://assets.growingio.com/assets/v2/logo_growingio.svg")
    div(class="start-tip")= "请点击以下产品开始圈选"
    div(v-for="project in projects")
      div(class="project-name")= "{{ project.name }}"
      ol(class="product-list")
        li(v-for="product in project.products", class="product-container")
          a(href="growing.{{ product.urlSchema }}://growing/oauth2/token?source=joker&circleType=app")
            img(class="product-logo", src="/app-icon/download/{{ product.platform }}/{{ product.spn }}")
            div(class="product-info-container")
              div(class="product-name")= "{{ product.name }}"
              div(class="product-spn")= "{{ product.spn }}"
              div(class="product-start-button")= "开启圈选"
  script(src='/javascripts/app.js')
